<Window x:Class="Txt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Txt"
        mc:Ignorable="d"
        Title="Redactor" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="799*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="text" Background="AliceBlue" FontSize="14" FontFamily="Times New Roman" Margin="10,10,10,130"></TextBox>
        <Button x:Name="open" Content="Открыть" HorizontalAlignment="Left" Margin="25,267,0,0"
VerticalAlignment="Top" Width="75" Click="OpFile"/>
        <Button x:Name="save" Content="Сохранить" HorizontalAlignment="Left" Margin="297,267,0,0" VerticalAlignment="Top" Width="75" Click="save_Click"/>
    </Grid>

</Window>
